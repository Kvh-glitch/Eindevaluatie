<Window x:Class="AuctionHouse.WPFPresentation.View.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Players" Height="400" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="2*"/>
           
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>

        </Grid.RowDefinitions>

        
        <TextBlock Text="Players"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        
        <ListBox x:Name="PlayerListBox"
                 Grid.Row="1"
                 DisplayMemberPath="Name"
                 SelectionChanged="PlayerListBox_SelectionChanged"/>

        
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0,10,0,5">
            <TextBlock Text="Gold: "
                       FontSize="14"
                       FontWeight="Bold"/>
            <TextBlock x:Name="GoldTextBlock"
                       FontSize="14"/>
        </StackPanel>
        <StackPanel Grid.Row="3">
            <TextBlock Text="Inventory"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <ListBox x:Name="InventoryListBox"
                     Height="Auto"/>



        </StackPanel>
    </Grid>
</Window>
