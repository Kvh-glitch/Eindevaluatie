<Window x:Class="AuctionHouse.WPFPresentation.View.AuctionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Active Auctions" Height="450" Width="650"
        MinHeight="350" MinWidth="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Active Auctions"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <ListBox x:Name="AuctionsListBox"
                 Grid.Row="1"/>
    </Grid>
</Window>