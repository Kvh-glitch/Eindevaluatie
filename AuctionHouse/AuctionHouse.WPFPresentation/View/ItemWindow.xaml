<Window x:Class="AuctionHouse.WPFPresentation.View.ItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Items" Height="500" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Available Items"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <ListBox x:Name="ItemListBox" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,2"
                    Padding="6"
                    BorderThickness="1"
                    CornerRadius="4"
                    BorderBrush="#CCCCCC">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"
                               FontSize="14"
                               FontWeight="Bold"/>

                            <TextBlock Text="{Binding RarityName}"
                               FontSize="12"
                               Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
