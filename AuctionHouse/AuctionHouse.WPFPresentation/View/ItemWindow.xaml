<Window x:Class="AuctionHouse.WPFPresentation.View.ItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Items" Height="500" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Available Items"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <ListBox x:Name="ItemListBox"/>
        <!-- Omdat Item.ToString() 'Name [RarityName]' teruggeeft,
             hoeven we geen DisplayMemberPath te zetten. -->
    </Grid>
</Window>
