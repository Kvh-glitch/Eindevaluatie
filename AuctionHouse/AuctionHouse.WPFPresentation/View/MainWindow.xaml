<Window x:Class="AuctionHouse.WPFPresentation.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auction House" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Rarities"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <ListBox x:Name="RarityListBox"
                 Grid.Row="1"
                 DisplayMemberPath="Name"/>
    </Grid>
</Window>